<?php
$sales = array(1000, 1200, 1400, 1600, 1800); // past sales data

// Calculate growth rates
$growthRates = array();
for($i=1; $i<count($sales); $i++){
    $growthRates[] = ($sales[$i] - $sales[$i-1]) / $sales[$i-1] * 100;
}
echo "Growth rates: ";
print_r($growthRates);

// Forecast next sale using average growth rate
$avgGrowth = array_sum($growthRates) / count($growthRates);
$nextSale = end($sales) * (1 + $avgGrowth/100);
echo "Predicted next sale: " . round($nextSale,2);
?>
